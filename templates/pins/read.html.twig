{% extends 'base.html.twig' %}

{% block title %}{{ pin.title }}{% endblock %}

{% block body %}

    <article>
        <h1>Pin {{ pin.id }}</h1>
        <p>{{ pin.description }}</p>
    </article>
    
    <a href="{{ path('app_pin_update', {id: pin.id} ) }}">Editer</a>    
        |
    <a href="#" onclick="
        event.preventDefault(); 
        confirm('Etes-vous certain de vouloir supprimer ce Pin?') 
        && 
        document.getElementById('js_pin_delete_form').submit();
        "
    >Supprimer</a>
        |
    <a href="{{ path('app_home') }}">Retour</a>
         
    <form id="js_pin_delete_form" action="{{ path('app_pin_delete', {id: pin.id} ) }}" method="post" style="display:none;">
        <input type="hidden" name="_method" value="Delete">
    </form>

{% endblock %}